<% content_for(:header_greeting) do %>
Facilities:
<%end%>


<div class="announcement_list">
<h3><%= @classroom.name %> @
  <%= @classroom.site.name %>
</h3>

<% unless @classroom.classroom_image.blank? %>
<%= image_tag @classroom.classroom_image.detail.url %>
<% end %>
<%unless @classroom.seating_capacity.blank?%>
<p><strong> Seating capacity:</strong>
  <%= @classroom.seating_capacity %>
</p>
<%end%>

<% if can? :manage, :all %>
<%= link_to "Edit", edit_classroom_path(@classroom), class:"edit_delete" %>
<%end%>
<%= link_to 'Back', site_path(@classroom.site), class:"edit_delete" %>
</div>