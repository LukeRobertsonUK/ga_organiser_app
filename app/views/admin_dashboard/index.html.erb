

<h4>Upcoming Courses</h4>

  <p><%=link_to "Create A New Course", new_course_path %></p>
<ul>
      <% @future_courses.each do |course| %>
      <li>
        <%= link_to course.name, course%>
         at
        <%= link_to course.site.name, course.site %>. Starts:
        <%= course.lessons.order('lesson_date').first.lesson_date %> |
        <%= link_to 'Edit', edit_course_path(course) %> |
        <%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %>
      </li>
      <% end %>
    </ul>


    <h4>Past Courses</h4>
<ul>
      <% @past_courses.each do |course| %>
      <li>
        <%= link_to course.name, course%>
         at
        <%= link_to course.site.name, course.site %>. Date:
        <%= course.lessons.order('lesson_date').first.lesson_date %> |
        <%= link_to 'Edit', edit_course_path(course) %> |
        <%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %>
      </li>
      <% end %>
    </ul>

    <h4>GA Announcements</h4>
    <p><%=link_to "Create A New Announcement", new_announcement_path %></p>
    <p><%= link_to "See All Announcements", announcements_path%></p>
  <ul>
    <% @announcements.each do |announcement| %>
    <li>
      <%=announcement.announcement_text %>
      <br>
      <% if announcement.user %>
      Posted by:
      <%=announcement.user.name%>
      <%end%>
      <%= distance_of_time_in_words(Time.now, announcement.updated_at) %>
      ago.

    </li>

    <%end%>